{
  "compilerOptions": {

    "composite": true,
    "declaration": true,
    "strict": false,
    "allowJs": true,
    "noEmit": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "incremental": true,

    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,

    "target": "esnext",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "resolveJsonModule": true,
    "isolatedModules": true,

    "typeRoots": [
      "node_modules/@types"
    ],

    "types": [
      "node"
    ],

    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ]

  },

  "exclude": [
    "node_modules",
    "build",
    "dist",
    "scripts"
  ]
}
